<div class="wthree_general graph-form agile_info_shadow ">
    <h3 class="w3_inner_tittle two" style="text-align: center;">Cập nhật món ăn </h3>

    <div class="grid-1 ">
        <div class="form-body">
            <form class="form-horizontal" method="POST" enctype="multipart/form-data">
                {{#with result}}
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Mã</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ma" readonly="true" value="{{this.ma_mon}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Tên món</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ten" value="{{this.ten_mon}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Nội dung chi tiết</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ndct" value="{{this.noi_dung_chi_tiet}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Nội dung tóm tắt</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ndtt" value="{{this.noi_dung_tom_tat}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Đơn giá</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="gia" value="{{this.don_gia}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Đơn giá khuyến mãi</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="giakmai" value="{{this.don_gia_khuyen_mai}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Loại món ăn</label>
                      <div class="col-sm-8">
                    <input type="text" class="form-control1" id="focusedinput" name="loai" value="{{this.ma_loai}}">
                 </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Khuyến mãi</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="khuyenmai" value="{{this.khuyen_mai}}">
                    </div>
                </div>
                {{!-- <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Ngày cập nhật</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ngaycn" value="{{formatDate this.ngay_cap_nhat "short"}}">
                    </div>
                </div> --}}
               <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Đơn vị tính</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="dvt" value="{{this.don_vi_tinh}}">
                    </div>
                </div>
                <div >
                    <label for="focusedinput" class="col-sm-2 control-label">Hình</label>
                   <div class="col-sm-8">
                        <img class="img-responsive chain" width="150px" height="150px" src="../{{this.hinh}}" alt=" " />
                    </div>
                </div>
               <div class="form-group">
                   <label for="focusedinput" class="col-sm-2 control-label">Thay đổi hình</label>
                   <div class="col-sm-8">
                    <input type="file" id="hinh" class="form-control1" required="required" name="hinh">
                </div>
                </div>
                {{/with}}
                <input name="_csrf" type="hidden" value="{{csrfToken}}">
               <div class="row">
                 <div class="text-center">
                <button class="alert alert-success">Cập nhật</button>
                <a href="/admin/list_food"class="alert alert-warming">Hủy</a>
                </div>
            </div>
            </form>
        </div>

    </div>
</div>